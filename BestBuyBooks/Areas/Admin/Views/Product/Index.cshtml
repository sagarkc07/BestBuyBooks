@model List<Product>
 

<div class="container">
    <div class="row">
        <div class="col-6 pt-4 pb-3">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create New Product
            </a>

        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            ISBN
        </th>
        <th>
            Price
        </th>
        <th>
            Author
        </th>

    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                 <td>@obj.ListPrice</td>
                 <td>@obj.Author</td>
                 
                <td>
                    <div class="w-50 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2"><i class="bi bi-archive"></i> Delete</a>

                    </div>
                </td>
            </tr>
    
        }
    </tbody>
</table>
</div>